<!--pages/comerce/comerce.wxml-->
<view class='section'>
  <view class='search'>     
    <textarea value='{{value}}' class='textArray' style='height: {{height}}px'>
      {{text}}
    </textarea>  
  </view>
</view>
<view class='section'>
  <view class='search'>
    <input bindinput='bindKeyInput' bindconfirm='confirmText' value='{{inputText}}' class='inputSend' type='text' style='width: {{widht}}px' focus='{{focus}}' auto-focus='true'></input>
    <image bindtap='sendText' class='send' style='margin-left: {{widht+18}}px' src='../../images/send.png'></image>
  </view>
</view>
